@using MVCSTOK.Models.Entity
@model List<urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayoud.cshtml";
}

    <table class="table table-bordered ">


        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN ADI</th>
            <th>KATEGORİ </th>
            <th>FİYAT</th>
            <th>MARKASI</th>
            <th>KALAN STOK</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>

        </tr>
        <tbody>
            @foreach (var urn in Model)
            // (değişken türü değişken ismi için model)
            {
            <tr>
                <th>@urn.URUNID</th>
                <td>@urn.URUNAD</td>
                <td>@urn.kategoriler.KATEGORİAD</td>
                <td>@urn.FİYAT</td>
                <td>@urn.MARKA</td>
                <td>@urn.STOK</td>
                <td><a href="/Urun/SİL/@urn.URUNID" class= " btn btn-danger">SİL</a></td>
                <td><a href="/Urun/UrunGetir/@urn.URUNID" class = " btn btn-success">GÜNCELLE</a></td>
                
            </tr>
            }
        </tbody>

    </table>
    <a href="/Urun/UrunEkle/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>
